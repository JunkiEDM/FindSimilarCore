{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/FindSimilar/FindSimilar.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-webclient",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/FindSimilarClient/FindSimilarClient.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "${workspaceFolder}/FindSimilarTest/FindSimilarTest.csproj"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet version",
            "command": "dotnet",
            "args": [
                "--version"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish release win10-x64",
            "command": "dotnet",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "--runtime",
                "win10-x64"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish release linux-x64",
            "command": "dotnet",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "--runtime",
                "linux-x64"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "robocopy",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "robocopy.ps1"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
